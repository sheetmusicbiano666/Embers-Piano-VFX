        <ComboBox HorizontalAlignment="Left" Margin="476,95,0,0" VerticalAlignment="Top" Width="96" Height="22"/>
        <TextBlock Margin="568,437,135,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top" FontSize="14" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Regular" Height="24"/>
