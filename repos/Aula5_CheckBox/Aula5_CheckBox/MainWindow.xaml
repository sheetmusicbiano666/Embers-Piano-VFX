        <ComboBox HorizontalAlignment="Left" Margin="257,122,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBlock Margin="415,100,316,0" TextWrapping="Wrap" Text="FPS" VerticalAlignment="Top" FontSize="14" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Regular"/>
        <ComboBox HorizontalAlignment="Left" Margin="686,95,0,0" VerticalAlignment="Top" Width="96" Height="22"/>
