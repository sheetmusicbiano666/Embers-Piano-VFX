        <CheckBox Content="Use Background" Margin="10,211,640,218" RenderTransformOrigin="0.767,-0.222" VerticalContentAlignment="Center" Background="#FF00579C" Checked="CheckBox_Checked_1" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Regular" FontSize="14" BorderBrush="#FF00579C"/>
