        xmlns:local="clr-namespace:Aula5_CheckBox"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Embers Piano VFX" Height="500
        " Width="800">
    <Grid>
        <Button Content="Load MIDI" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="367" Height="26" BorderBrush="#FF00579C" Background="#FF00579C" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Bold" Click="Button_Click_1"/>
        <Button Content="Unload MIDI" HorizontalAlignment="Left" Margin="415,42,0,0" VerticalAlignment="Top" Width="367" Height="26" BorderBrush="#FF00579C" Background="#FF00579C" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Bold"/>
        <TextBlock Margin="10,73,415,0" TextWrapping="Wrap" Text="Render Resolution" VerticalAlignment="Top" Width="367" TextAlignment="Center" FontSize="18" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Bold"/>
        <TextBlock Margin="415,73,10,0" TextWrapping="Wrap" Text="Render Options" VerticalAlignment="Top" Width="367" TextAlignment="Center" FontSize="18" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Bold"/>
        <TextBlock Margin="10,100,721,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" FontSize="14" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Regular"/>
        <TextBlock Margin="10,127,721,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" FontSize="14" FontFamily="/Aula5_CheckBox;component/Fonts/#Product Sans" FontWeight="Regular"/>
